<main class="container">
  <section class="pt-4 pb-0 card-grid">
    <div class="container">
        <div class="row">
            <div class="offset-lg-1 col-lg-8 col-12">
             <div class="mb-8 mt-8">
                <h3 class="mb-3">My Bookmarks</h3>
                <ul class="nav nav-category" id="categoryCollapseMenu">
                    <% for(let i=0;i<category.length;i++){ %>
                        <%if (category[i].id==id) {%>
                   <li class="nav-item border-bottom w-100 p-3 collapsed" data-bs-toggle="collapse"
                      data-bs-target="#categoryFlushOne" aria-expanded="false" aria-controls="categoryFlushOne">
                      <h3><a href="" id="url" class="btn-link  text-dark fw-bold"><%=category[i].categoryName%></a> <a href="/delete/category/<%=category[i].categoryId%>" style="float: right;"><i class="bi bi-trash3-fill"></i></a></h3>
                      <a href="#"><h4> <small></small></h4></a>
                        
                      <div id="categoryFlushOne" class="accordion-collapse collapse"
                         data-bs-parent="#categoryCollapseMenu">
                         <div>
                            <ul class="nav flex-column ms-3">
                        
                                <% for(let j=0;j<bookmarks.length;j++){ %>
                                    <%if(bookmarks[j].categoryId==category[i].categoryId){%>
                               <li class="nav-item"><h6><a href="<%=bookmarks[j].url%>" class="btn-link  text-secondary fw-bold"><i class="bi bi-caret-right-fill"></i><%=bookmarks[j].title%></a><a href="/delete/category/<%=bookmarks[j].bookmarkId%>" style="float: right;"><i class="bi bi-trash3-fill"></i></a></h6></li>
                               <% } %>
                               <% } %>
                            </ul>
                         </div>
                      </div>
                   </li>
                        <% } %>
                    <% } %>
                </ul>
            </div>
        </div>  
        </div>
        </div>
        </section> 
               



           
          
</main>