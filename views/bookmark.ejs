                                   <li class="nav-item"><a href="<%=bookmarks[j].url%>" class="nav-link"><i class="bi bi-caret-right-fill"></i><%=bookmarks[j].title%></a><a href="/delete/category/<%=bookmarks[j].bookmarkId%>" style="float: right;"><i class="bi bi-trash3-fill"></i></a></li>
                                   <% } %>
                                   <% } %>
                                </ul>
                             </div>
                          </div>
                       </li>
                            <% } %>
                        <% } %>
                    </ul>
                </div>
            </div>  
            </div>
            </div>
