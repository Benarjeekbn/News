<%- include ('head.ejs')%>

  <main>
    <div class="container">
      <div class="row justify-content-center align-items-center vh-100 py-5">
        <div class="col-sm-10 col-md-8 col-lg-7 col-xl-6 col-xxl-5">
          <div class="card card-body rounded-3 p-4 p-sm-5">
            <div class="text-center">
              <h1 class="mb-2">Sign up</h1>
              <span class="d-block">Don't have an account? <a href="/signup">Click here to sign up</a></span>
            </div>
            <form class="mt-4" action="/signIn" method="post">
              <div class="mb-3 input-group-lg">
                <input type="email" class="form-control" name="email" placeholder="Enter email" required>
              </div>
              <div class="mb-3 position-relative">
                <div class="input-group input-group-lg">
                  <input class="form-control fakepassword" name="password" type="password" id="psw-input"
                    placeholder="Enter new password" required>
                </div>
              </div>
              <div class="mb-3 text-start">
                <% if(message.length!=0){ %>
                  <span class="text-danger">
                    <%=message%>!!!
                  </span>
                  <% } %>
              </div>
              <div class="d-grid"><button type="submit" class="btn btn-lg btn-primary">Login</button></div>
              <p class="mb-0 mt-3 text-center">Â©2022 <a target="_blank" href="/home">NEWS.</a> All rights reserved</p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>